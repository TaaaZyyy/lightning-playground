<aura:component>

  <!-- attributeのtypeにコレクションを使用したい場合は[]を使う。List<Expense__c>は不可 -->
  <aura:attribute name="expenses" type="Expense__c[]"/>

  <aura:attribute name="newExpense" type="Expense__c"
      default="{
        'sobjectType': 'Expense__c',
        'Name': '',
        'Amount__c': 0,
        'Client__c': '',
        'Date__c': '',
        'Reimbursed__c': false  
      }"/>


  <!-- PAGE HEADER -->
  <lightning:layout class="slds-page-header slds-page-header_object-home">
    <lightning:layoutItem>
      <lightning:icon iconName="standard:scan_card" alternativeText="My Expenses"/>
    </lightning:layoutItem>
    <lightning:layoutItem padding="horizontal-small">
      <div class="page-section page-header">
        <h1 class="slds-text-heading_label">Expenses</h1>
        <h2 class="slds-text-heading_medium">My Expenses</h2>
      </div>
    </lightning:layoutItem>
  </lightning:layout>
  <!-- / PAGE HEADER -->


  <!-- NEW EXPENSE FORM -->
  <lightning:layout>
    <!-- size 50%(6/12) -->
    <lightning:layoutItem padding="around-small" size="6">

      <!-- CREATE NEW EXPENSE -->
      <div aria-labelledby="newexpenseform"><!-- aria-labelledbyはテキストスピーチで読み上げられる文章（アクセサビリティ） -->

        <!-- BOXED AREA -->
        <fieldset class="slds-box slds-theme_default slds-container_small"><!-- 入力フォームを一括りにする -->
          <legend id="newexpenseform" class="slds-text-heading_small slds-p-vertical_medium"><!-- fieldsetのラベル -->
            Add Expense
          </legend>

          <!-- CREATE NEW EXPENSE FORM -->
          <form class="slds-form_stacked">
            <lightning:input aura:id="expenseform" label="Expense Name" name="expensename"
                value="{!v.newExpense.Name}" required="true"/><!-- aura:idが同じであるため、配列として扱える -->
            <lightning:input type="number" aura:id="expenseform" label="Amount" name="expenseamount"
                min="0.1" formatter="currency" step="0.01" value="{!v.newExpense.Amount__c}"
                messageWhenRangeUnderflow="$0.10以上の数値を入力してください。"/>
                <!--messageWhenRangeUnderflowは入力値がminを下回ったときに表示するメッセージ。デフォルトは「数値が低すぎます。」 -->
            <lightning:input aura:id="expenseform" label="Client" name="expenseclient"
                value="{!v.newExpense.Client__c}" placeholder="ABC Co."/><!-- placeholder未記入時にうっすら見える記入例 -->
            <lightning:input type="date" aura:id="expenseform" label="Expense Date"
                name="expensedate" value="{!v.newExpense.Date__c}"/>
            <lightning:input type="checkbox" aura:id="expenseform" label="Reimbursed?"
                name="expreimbursed" value="{!v.newExpense.Reimbursed__c}"/>
            <lightning:button label="Create Expense" class="slds-m-top_medium" variant="brand" onclick="{!c.clickCreate}"/>
          </form>
          <!-- / CREATE NEW EXPENSE FORM -->

        </fieldset>
        <!-- / BOXED AREA -->

      </div>
      <!-- / CREATE NEW EXPENSE -->

    </lightning:layoutItem>
  </lightning:layout>
  <!-- / NEW EXPENSE FORM -->

  <c:expensesList expenses="{!v.expenses}"/>

</aura:component>